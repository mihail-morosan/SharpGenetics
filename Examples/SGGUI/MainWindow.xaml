<Window x:Class="SGGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="371" Width="807">
    <Grid>
        <StatusBar Height="30" Margin="0,0,0,-2" VerticalAlignment="Bottom">
            <StatusBarItem x:Name="currentGenLabel1" Content="Current Generation:" Height="30" VerticalAlignment="Top"/>
            <StatusBarItem x:Name="currentGenLabel" Content="0" Height="30" VerticalAlignment="Top"/>
            <StatusBarItem x:Name="statusOfRuns" Content="Currently uninitialized" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        </StatusBar>
        <Frame x:Name="frame" Content="Frame" Margin="0,28,0,33" NavigationUIVisibility="Visible"/>
        <ToolBar x:Name="toolBar" VerticalAlignment="Top" Height="28">
            <Button x:Name="button2" Content="Save State" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button2_Click"/>
            <Button x:Name="button3" Content="Load State" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="button3_Click"/>
        </ToolBar>

    </Grid>
</Window>
